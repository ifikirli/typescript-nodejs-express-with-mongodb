{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ], 
    "lib": ["es2020"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}